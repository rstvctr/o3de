#ifndef AZ_COLLECTING_PARTIAL_SRGS
#error Do not include this file directly. Include the main .srgi file instead.
#endif

#ifndef MULTIVIEW
#define MULTIVIEW 0
#endif

#if MULTIVIEW
static uint g_viewIndex;
#endif

#if MULTIVIEW
#define VIEWSRG_VIEWPROJECTIONMATRIX ViewSrg::m_viewProjectionMatrix[g_viewIndex]
#define VIEWSRG_VIEWMATRIX ViewSrg::m_viewMatrix[g_viewIndex]
#define VIEWSRG_VIEWMATRIXINVERSE ViewSrg::m_viewMatrixInverse[g_viewIndex]
#define VIEWSRG_PROJECTIONMATRIX ViewSrg::m_projectionMatrix[g_viewIndex]
#define VIEWSRG_PROJECTIONMATRIXINVERSE ViewSrg::m_projectionMatrixInverse[g_viewIndex]
#define VIEWSRG_VIEWPROJECTIONINVERSEMATRIX ViewSrg::m_viewProjectionInverseMatrix[g_viewIndex]
#define VIEWSRG_VIEWPROJECTIONPREVMATRIX ViewSrg::m_viewProjectionPrevMatrix[g_viewIndex]
#define VIEWSRG_WORLDPOSITION ViewSrg::m_worldPosition[g_viewIndex]
#define VIEWSRG_LINEARIZEDEPTHCONSTANTS m_linearizeDepthConstants[g_viewIndex]
#define VIEWSRG_UNPROJECTIONCONSTANTS m_unprojectionConstants[g_viewIndex]
#else
#define VIEWSRG_VIEWPROJECTIONMATRIX ViewSrg::m_viewProjectionMatrix[0]
#define VIEWSRG_VIEWMATRIX ViewSrg::m_viewMatrix[0]
#define VIEWSRG_VIEWMATRIXINVERSE ViewSrg::m_viewMatrixInverse[0]
#define VIEWSRG_PROJECTIONMATRIX ViewSrg::m_projectionMatrix[0]
#define VIEWSRG_PROJECTIONMATRIXINVERSE ViewSrg::m_projectionMatrixInverse[0]
#define VIEWSRG_VIEWPROJECTIONINVERSEMATRIX ViewSrg::m_viewProjectionInverseMatrix[0]
#define VIEWSRG_VIEWPROJECTIONPREVMATRIX ViewSrg::m_viewProjectionPrevMatrix[0]
#define VIEWSRG_WORLDPOSITION ViewSrg::m_worldPosition[0]
#define VIEWSRG_LINEARIZEDEPTHCONSTANTS m_linearizeDepthConstants[0]
#define VIEWSRG_UNPROJECTIONCONSTANTS m_unprojectionConstants[0]
#endif

partial ShaderResourceGroup ViewSrg
{
    row_major float4x4 m_viewProjectionMatrix[2];          // World -> Projection
    row_major float4x4 m_viewMatrix[2];                    // World -> View
    row_major float4x4 m_viewMatrixInverse[2];             // View -> World
    row_major float4x4 m_projectionMatrix[2];              // View -> Projection
    row_major float4x4 m_projectionMatrixInverse[2];       // Projection -> View
    row_major float4x4 m_viewProjectionInverseMatrix[2];   // Projection -> World

    // view projection matrix of last frame
    row_major float4x4 m_viewProjectionPrevMatrix[2];

    float3 m_worldPosition[2];

    // Constants to help calculate linear depth in an optimized manner
    float4 m_linearizeDepthConstants[2];

    // Constants used to unproject depth values and reconstruct the view-space position (Z-forward & Y-up)
    // See the GetViewSpacePosition( ) function below
    float4 m_unprojectionConstants[2];



    // Debug members...

    // Rendering options related to shader debugging
    uint m_renderDebugOptions;

    // Specifies what should be output to the view (i.e. normals, lighting, albedo, etc.)
    uint m_renderDebugViewMode;
    
    float GetNearZ()
    {
        return VIEWSRG_LINEARIZEDEPTHCONSTANTS.x;
    }

    float GetFarZ()
    {
        return VIEWSRG_LINEARIZEDEPTHCONSTANTS.y;
    }

    float GetFarZTimesNearZ()
    {
        return VIEWSRG_LINEARIZEDEPTHCONSTANTS.z;
    }

    float GetFarZMinusNearZ()
    {
        return VIEWSRG_LINEARIZEDEPTHCONSTANTS.w;
    }

    // Uses linearDepth value at screenUV to reconstruct view-space position (Z-forward & Y-up)
    float3 GetViewSpacePosition(float2 screenUV, float linearDepth)
    {
        float2 screenRay = (screenUV * VIEWSRG_UNPROJECTIONCONSTANTS.xy + VIEWSRG_UNPROJECTIONCONSTANTS.zw);
        return float3(screenRay * linearDepth, linearDepth);
    }
}


#include <Atom/Feature/Common/Assets/ShaderResourceGroups/Decals/ViewSrg.azsli>
#include <Atom/Feature/Common/Assets/ShaderResourceGroups/CoreLights/ViewSrg.azsli>
#include <Atom/Feature/Common/Assets/ShaderResourceGroups/PostProcessing/ViewSrg.azsli>
