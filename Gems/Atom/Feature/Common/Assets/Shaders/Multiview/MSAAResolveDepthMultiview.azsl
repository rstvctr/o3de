#define MULTIVIEW 1

#include <Atom/Features/SrgSemantics.azsli>

#include <Atom/Features/PostProcessing/FullscreenVertex.azsli>
#include <Atom/Features/PostProcessing/PostProcessUtil.azsli>

ShaderResourceGroup PassSrg : SRG_PerPass
{
    Texture2DMSArray<float> m_depthTexture;
}


struct PSOutput
{
    float m_depth : SV_Depth;
};


PSOutput MainPS(VSOutput IN, uint viewIndex : SV_ViewID)
{
    uint width = 0;
    uint height = 0;
    uint elements = 0;
    uint numberOfSamples = 0;
    PassSrg::m_depthTexture.GetDimensions(width, height, elements, numberOfSamples);

    int3 coord = int3(width * IN.m_texCoord.x, height * IN.m_texCoord.y, viewIndex);

    PSOutput OUT;
  
    int sampleIndex = 0;
    OUT.m_depth = PassSrg::m_depthTexture.Load(coord, sampleIndex);

    return OUT;
}
